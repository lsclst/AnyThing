<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">


	<ImageView
		android:id="@+id/id_iv_splash"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"/>
	<ImageView
		android:id="@+id/id_splash_like"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_gravity="center"
		android:clickable="true"
		android:focusable="true"
		android:visibility="gone"
		app:srcCompat="@drawable/ic_like"/>
	<ImageView android:id="@+id/id_splash_dl"
	           android:layout_width="@dimen/like_btn_size"
	           android:layout_height="@dimen/like_btn_size"
	           android:layout_gravity="center_horizontal|bottom"
	           android:layout_marginBottom="32dp"
	           android:clickable="true"
	           android:focusable="true"
	           android:src="@drawable/ic_download_splash"
	           android:visibility="gone"/>

</FrameLayout>